<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimeLib" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:textColorSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.splash" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="txt_header">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="txt">
        <item name="fontFamily">@font/ubuntu_italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="divider" parent="Theme.AppCompat.DayNight">
        <item name="android:src">@drawable/divider</item>
    </style>

    <style name="logo_tb" parent="Theme.AppCompat.DayNight">
        <item name="android:src">@drawable/ic_animelib</item>
    </style>

    <style name="icons_tint" parent="Theme.AppCompat.DayNight">
        <item name="tint">@color/orange</item>
    </style>

    <style name="toggle_btn" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@drawable/bg_toggle_button</item>
    </style>
</resources>