<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimeLib" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple_dark</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.splash" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@drawable/splash_bg_d</item>
    </style>

    <style name="divider" parent="Theme.AppCompat.DayNight">
        <item name="android:src">@drawable/divider_d</item>
    </style>

    <style name="logo_tb" parent="Theme.AppCompat.DayNight">
        <item name="android:src">@drawable/ic_animelib_d</item>
    </style>

    <style name="icons_tint" parent="Theme.AppCompat.DayNight">
        <item name="tint">@color/purple</item>
    </style>

    <style name="toggle_btn" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@drawable/bg_toggle_button_d</item>
    </style>
</resources>